<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="@string/act_beer_alco"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/init_density" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@id/pNach"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />

                <ImageButton
                    android:id="@id/clear1"
                    style="@style/MoonshineTheme.ClearButtons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:contentDescription="TODO" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/fin_density" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@id/pKon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:digits="0123456789."
                    android:inputType="numberDecimal" />

                <ImageButton
                    android:id="@id/clear2"
                    style="@style/MoonshineTheme.ClearButtons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:contentDescription="TODO" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/koefSusla" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@id/koefsuslo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:digits="0123456789."
                    android:inputType="numberDecimal" />

                <ImageButton
                    android:id="@id/clear3"
                    style="@style/MoonshineTheme.ClearButtons"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0" />
            </LinearLayout>

            <CheckBox
                android:id="@id/convert"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/conv_to_1xxx" />

            <CheckBox
                android:id="@id/refract"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/measureRefract" />

            <Button
                android:id="@id/button"
                style="@style/MoonshineTheme.CalculateBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/CALCULATE" />

            <TextView
                android:id="@id/rez"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:gravity="center"
                android:text="@string/beer_alco_rez" />

            <TextView
                android:id="@id/rezultat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="000"
                android:textColor="#ff00ff00"
                android:textSize="40.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>