<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moonshiner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MoonshineTheme.CalcButtons" parent="@style/Theme.Moonshiner">
        <item name="android:background">@drawable/calc_buttons_light</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:src">@drawable/ic_action_calc</item>
    </style>

</resources>